CREATE TABLE USUARIOS_XXX(ID INTEGER,EDAD INTEGER, EMAIL VARCHAR2 (120));

CREATE OR REPLACE TRIGGER DISPARADOR_USUARIO_XXX BEFORE INSERT ON USUARIO_XXX FOR EACH ROW 
BEGIN 
IF :NEW.EDAD <18 THEN 
  RAISE_APPLICATION_ERROR (-20001, ’LO SIENTO ERES PEQUEÑO’);
END IF;
END;

INSERT INTO USUARIO_XXX(EDAD)
VALUES (20); 
INSERT INTO USUARIO(EDAD)
VALUES(16);

SELECT * FROM USUARIO_XXX;


CREATE OR REPLACE TRIGGER DISPARADOR_USUARIO_XXX BEFORE INSERT ON USUARIO_XXX FOR EACH ROW 
BEGIN 
IF :NEW.EDAD <18 OR LENGTH(:NEW.EMAIL)<3 THEN 
	RAISE_APPLICATION_ERROR (-20001, ’LO SIENTO ERES PEQUEÑO’);
END IF;
END;
